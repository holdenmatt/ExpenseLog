{
  "name": "TravelLog",
  "version": "0.0.1",
  "description": "A simple React app to track daily travel expenses",
  "author": "Matt Holden",
  "repository": "https://github.com/holdenmatt/TravelLog",
  "main": "client/js/main.js",
  "license": "MIT",
  "scripts": {
    "build": "browserify -d client/js/main.js -o build/bundle.js -p [minifyify --map main.js.map --output build/main.js.map]",
    "watch": "watchify -d client/js/main.js -o build/bundle.js -p [minifyify --map main.js.map --output build/main.js.map]",
    "install:python": "npm run install:venv && npm run install:pip",
    "install:venv": "virtualenv venv --no-site-packages",
    "install:pip": "source venv/bin/activate && pip install -r requirements.txt",
    "postinstall": "bower install && npm run build",
    "start": "source venv/bin/activate && heroku local",
    "test": "DATABASE_URL=postgresql://localhost/TravelLogTest nosetests",
    "clean": "rm -rf build",
    "clean:all": "npm run clean && rm -rf venv && rm -rf node_modules"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "bower": "^1.7.7",
    "browserify": "^13.0.0",
    "browserify-css": "^0.8.4",
    "classnames": "^2.2.3",
    "flux": "^2.1.1",
    "minifyify": "^7.2.1",
    "moment": "^2.11.1",
    "object-assign": "^4.0.1",
    "react": "^0.14.7",
    "react-datepicker": "^0.19.0",
    "react-dom": "^0.14.7",
    "react-select": "^0.9.1"
  },
  "devDependencies": {
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-css"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  }
}
