{
  "name": "TravelLog",
  "version": "0.0.1",
  "description": "A simple React app to track daily travel expenses",
  "author": "Matt Holden",
  "repository": "https://github.com/holdenmatt/TravelLog",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "build:js": "browserify src/client/js/main.js -o build/bundle.js -t babelify",
    "build:css": "cat src/client/css/*.css > build/bundle.css",
    "build:lib": "cp -R lib build/",
    "build": "npm run build:js && npm run build:css && npm run build:lib",
    "watch:js": "watchify src/client/js/main.js -o build/bundle.js -t babelify -dv",
    "watch:css": "catw src/client/css/*.css -o build/bundle.css -v",
    "watch": "npm run watch:js & npm run watch:css",
    "lint": "jshint build/bundle.js",
    "start": "http-server -p 9090 .",
    "clean": "rm -r build/*"
  },
  "dependencies": {
    "backbone": "^1.2.3",
    "classnames": "^2.2.3",
    "flux": "^2.1.1",
    "jquery": "^2.2.0",
    "moment": "^2.11.1",
    "object-assign": "^4.0.1",
    "react": "^0.14.7",
    "react-datepicker": "^0.19.0",
    "react-dom": "^0.14.7",
    "react-select": "^0.9.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "catw": "^1.0.1",
    "http-server": "^0.8.5",
    "jshint": "^2.9.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  }
}
